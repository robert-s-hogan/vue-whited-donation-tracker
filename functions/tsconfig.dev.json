{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "lib",  
    "rootDir": "src", 
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",   
    ".eslintrc.js"   
  ],
  "exclude": [
    "node_modules"  
  ]
}
